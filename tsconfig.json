{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "#application/*": ["src/application/*"],
      "#domain/*": ["src/domain/*"],
      "#infra/*": ["src/infra/*"],
      "#shared/*": ["src/shared/*"],
      "#tests/*": ["src/tests/*"],
      "#root/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules"]
}